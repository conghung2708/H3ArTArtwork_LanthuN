@using H3ArT.Models.ViewModels
@model UserVM

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Woody - Carpenter Website Template</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <script type="text/javascript">(function () { var css = document.createElement('link'); css.href = 'https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css'; css.rel = 'stylesheet'; css.type = 'text/css'; document.getElementsByTagName('head')[0].appendChild(css); })();</script>

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;500&family=Roboto:wght@500;700;900&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->

    <link href="~/lib/collection/lightbox/css/lightbox.min.css" rel="stylesheet" />
    <link href="~/lib/collection/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/lib/collection/animate/animate.min.css" rel="stylesheet" />
    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/bootstrap.min.collection.css" rel="stylesheet" />
    <link href="~/css/style_collection.css" rel="stylesheet" />
    <!-- Template Stylesheet -->
    <style>
        .container-fluid {
            max-width: 100%;
        }

        .download-button {
            display: inline-block;
            padding: 10px 20px;
            background-color: #007bff; /* Change color as needed */
            color: #fff; /* Change text color as needed */
            border-radius: 5px;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

            .download-button:hover {
                background-color: #0056b3; /* Change hover color as needed */
            }
    </style>
</head>

<body>
    <!-- Spinner Start -->
    <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-grow text-primary" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    <!-- Spinner End -->
    <!-- Topbar Start -->
    <!-- Page Header Start -->
    <div class="container-fluid page-header py-5 mb-5">
        <div class="container py-5">
            <h1 class="display-3 text-white mb-3 animated slideInDown">My Collection</h1>
            <nav aria-label="breadcrumb animated slideInDown">

            </nav>
        </div>
    </div>
    <!-- Page Header End -->
    <!-- Service Start -->
    <div class="container-xxl py-5">
        <div class="container">
            <div class="section-title text-center">
                <h1 class="display-5 mb-5">My collection</h1>
            </div>
            <div class="row g-4">
                @foreach (var artwork in Model.ArtworkList)
                {
                    <div class="col-md-6 col-lg-4 wow fadeInUp" data-wow-delay="0.1s">
                        <div class="service-item">
                            <div class="overflow-hidden">
                                <img class="img-fluid" src="@artwork.ImageUrl" alt="">
                            </div>
                            <div class="p-4 text-center border border-5 border-light border-top-0">
                                <h4 class="mb-3">@artwork.Title</h4>
                                <a asp-action="DownloadArtworkImage" asp-route-artworkId="@artwork.ArtworkId" class="download-button fw-medium" download>
                                    <i class="fa fa-download" aria-hidden="true"></i> Download
                                </a>
                            </div>

                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <!-- Service End -->
    <!-- Quote End -->
    <!-- Footer End -->
    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square rounded-0 back-to-top"><i class="bi bi-arrow-up"></i></a>


    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>


    <script src="~/lib/collection/wow/wow.min.js"></script>
    <script src="~/lib/collection/easing/easing.min.js"></script>
    <script src="~/lib/collection/waypoints/waypoints.min.js"></script>
    <script src="~/lib/collection/counterup/counterup.min.js"></script>
    <script src="~/lib/collection/isotope/isotope.pkgd.min.js"></script>
    <script src="~/lib/collection/lightbox/js/lightbox.min.js"></script>
    <!-- Template Javascript -->
    <script src="~/js/main_collection.js"></script>
</body>

</html>

</html>