﻿@using H3ArT.Models.ViewModels
@model UserVM
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Author - Pintereso Bootstrap Template</title>
    <script type="text/javascript">(function () { var css = document.createElement('link'); css.href = 'https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css'; css.rel = 'stylesheet'; css.type = 'text/css'; document.getElementsByTagName('head')[0].appendChild(css); })();</script>

    <link href="~/css/app.css" rel="stylesheet" />
    <link href="~/css/theme.css" rel="stylesheet" />
</head>

<body>




    <div class="jumbotron border-round-0 min-50vh" style="background-image:url(https://images.unsplash.com/photo-1522204657746-fccce0824cfd?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=84b5e9bea51f72c63862a0544f76e0a3&auto=format&fit=crop&w=1500&q=80);">
    </div>
    <div class="container mb-4 position-relative">
        @{
            string avatarImageSrc = string.IsNullOrEmpty(Model.artist.AvatarImage) ? "~/image/defaultava/default.jpg" : Model.artist.AvatarImage;
        }
   
        <img src="@Url.Content(avatarImageSrc)" class="mt-neg100 mb-4 rounded-circle" width="128" alt="avatar">


        <h1 class="font-weight-bold title">@Model.artist.FullName</h1>
        <p>
            I love Art, Web Design, Photography, Design, Illustration
        </p>
        <div class="position-absolute top-0 end-0 pe-2">
            <div>
                <a asp-action="ReportArtist" asp-route-artistID="@Model.artist.Id">
                    <i class="fa fa-arrow-circle-o-right" aria-hidden="true"></i> Report
                </a>
            </div>
            <div>
                <a asp-action="ViewBlog" asp-route-artistID="@Model.artist.Id" style="color: #00a67d;">
                    <i class="fa fa-arrow-circle-o-right" aria-hidden="true"></i> View my blog
                </a>
            </div>
        </div>
    </div>
    <div class="container-fluid mb-5">
        <div class="row">
            <div class="card-columns">

                @foreach (var artwork in Model.artworkList)
                {

                    <div class="card card-pin">
                        <img class="card-img" src="@artwork.imageUrl" alt="Card image">
                        <div class="overlay">
                            <h2 class="card-title title">@artwork.title</h2>
                            <div class="more">
                                @if (!artwork.isBought)
                                {
                                    <a asp-action="Details" asp-route-artworkId="@artwork.artworkId">
                                        <i class="fa fa-arrow-circle-o-right" aria-hidden="true"></i> More
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <script src="~/js/app.js"></script>
    <script src="~/js/theme.js"></script>

</body>

</html>